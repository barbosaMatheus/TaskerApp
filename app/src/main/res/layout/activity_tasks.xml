<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matheus.taskbar.Tasks" >

    <Button
        android:text="add task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/add_button"
        android:onClick="button_click_listener" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/add_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/list" />

    <Button
        android:text="clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear_button"
        android:onClick="button_click_listener"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/add_button"
        android:layout_marginStart="7dp" />

    <Button
        android:text="clr all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ca_button"
        android:onClick="button_click_listener"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/clear_button"
        android:layout_marginStart="7dp" />

    <Button
        android:text="\?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/task_help"
        android:layout_toEndOf="@+id/ca_button"
        android:layout_marginStart="7dp"
        android:onClick="show_help_pop" />
</RelativeLayout>

