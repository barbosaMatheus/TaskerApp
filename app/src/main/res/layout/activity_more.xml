<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matheus.taskbar.MoreActivity"
    android:background="@drawable/background">

    <Button
        android:text="usage tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tips"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:onClick="show_pop_up" />

    <Button
        android:text="contribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/contribute"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:onClick="show_pop_up" />

    <Button
        android:text="why do i see ads?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ads"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:onClick="show_pop_up"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tips"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/credits"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:onClick="show_pop_up"/>

    <Button
        android:text="new features"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contribute"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:id="@+id/features"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:onClick="show_pop_up"/>
</RelativeLayout>
