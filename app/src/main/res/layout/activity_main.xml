<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matheus.taskbar.MainActivity"
    android:background="@drawable/background">

    <Button
        android:text="help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/help_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="button_click_listener"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

    <Button
        android:text="tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:id="@+id/tasks_button"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/slist_button"
        android:onClick="button_click_listener"
        android:textSize="18sp"
        android:layout_alignStart="@+id/slist_button"
        android:textColor="@android:color/white"/>

    <Button
        android:text="reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_button"
        android:layout_marginTop="17dp"
        android:onClick="button_click_listener"
        android:textSize="18sp"
        android:layout_below="@+id/slist_button"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/slist_button"
        android:textColor="@android:color/white"/>

    <Button
        android:text="shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slist_button"
        android:layout_marginTop="18dp"
        android:onClick="button_click_listener"
        android:textSize="18sp"
        android:layout_below="@+id/tasks_button"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"/>

    <Button
        android:text="My List 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/alarm_button"
        android:layout_alignParentStart="true"
        android:id="@+id/list2_button"
        android:onClick="button_click_listener"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

    <Button
        android:text="My List 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/slist_button"
        android:layout_alignParentStart="true"
        android:id="@+id/list1_button"
        android:onClick="button_click_listener"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

    <Button
        android:text="more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/more_button"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:onClick="button_click_listener" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/title"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/list1_button"
        android:layout_marginBottom="150dp"/>

</RelativeLayout>
